{
	"compilerOptions": {
		"target": "es6",
		"useDefineForClassFields": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": false,
		"allowJs": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"lib": ["esnext", "dom"],
		"types": ["dtcesium-type"]
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue",]
}
